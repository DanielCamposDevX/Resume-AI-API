generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Video {
  id            String   @id @default(uuid())
  name          String
  path          String
  transcription String?
  createdAt     DateTime @default(now())
}

model Prompt {
  id       String @id @default(uuid())
  title    String
  template String
}

model user {
  id       String @id @default(uuid())
  name     String
  email    String
  password String
  phone    String
}
