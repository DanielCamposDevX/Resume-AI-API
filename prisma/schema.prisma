generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Video {
  id            String   @id @default(uuid())
  name          String
  path          String
  transcription String?
  createdAt     DateTime @default(now())
}

model Prompt {
  id       String @id @default(uuid())
  title    String
  template String
}

model User {
  id       String  @id @default(uuid())
  name     String 
  email    String @unique
  password String
  phone    String @unique
  sessions Session[]
}

model Session {
  token String @id @default(uuid())
  userId String
  lastChange DateTime @default(now())
  user   User   @relation(fields: [userId], references: [id])
}
