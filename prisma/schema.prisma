generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Video {
  id            String   @id @default(uuid())
  name          String?
  path          String
  transcription String?
  createdAt     DateTime @default(now())
  createdBy     String
}

model Prompt {
  id       String @id @default(uuid())
  title    String
  template String
}

model User {
  id       String     @id @unique
  sessions Sessions[]
}

model Sessions {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  lastChange DateTime @default(now())
}
